- form_for(project, :html => {:class => :form}) do |f|
  = f.error_messages
  .left
    %span.wrap
      = f.label :name
      = f.text_field :name
    %span.wrap
      = f.label :url
      = f.text_field :url
      %small Skip this if your login is the same as github.  Only github info fetching for now.
    %span.wrap
      = f.label :issues
      = f.text_field :issues
      %small Defaults to project URL/issues.
    %span.wrap
      = f.label :tags_text
      = f.text_field :tags_text
      %small Languages & Technologies used
    %span.wrap
      = f.label :info
      = f.text_area :info, :size => "53x6"
  .right
    %span.wrap
      = f.label :devs
      = f.text_field :devs
      %small Active developers
    %span.wrap
      = skill_select(f)
  .clear
  = save_or_cancel(f)