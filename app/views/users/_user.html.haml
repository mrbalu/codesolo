- form_for @user, :html => {:class => "form"} do |f|
  = f.error_messages
  .group
    = f.label :login
    = f.text_field :login
  .group
    = f.label :email
    = f.text_field :email
  .group
    = f.label :password
    = f.password_field :password, :size => 20
  .group
    = f.label :confirm
    = f.password_field :password_confirmation, :size => 20
