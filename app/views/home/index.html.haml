- content_for :foot do
  =# javascript_include_tag "location"

.block
  .content
    %h2.title Spotlight
    .inner.form
    .inner
      - if @first
        %ol
          %li.pub_item.latest
            = link_to @first.name, @first
            = show_tags(@first)
          - for item in @all
            %li.pub_item
              = link_to item.name, item
              = show_tags(item)
      - else
        No projects?


- content_for :sidebar do
  .block
