- content_for :foot do
  =# javascript_include_tag "location"

.block
  .content
    %h2.title Spotlight
    .inner.form
    .inner
      - unless @all.empty?
        %ol
          - for item in @all
            %li.pub_item.latest
              = link_to item.name, item
              (#{skill_text(item.skill)} - #{item.devs})
              %span.gray (#{item.karma})
              = show_tags(item)
      - else
        No projects?


- content_for :sidebar do
  .block.notice
    %h4
      Solo?
    %p= t('solo.intro')
  .block
    - if current_user
      %h3= link_to "My projects", "/profile"
      %ul.navigation
        %li= link_to "New project!", new_project_path
        - for project in current_user.projects
          %li= link_to project.name, project
      -# %table.user_grid
      -#  current_user.projects.each_slice(5) do |slice|
      -#   %tr
      -#     - for project in slice
      -#       = link_to image_tag(project.avatar.url(:tiny)), project

  .block
    .sidebar-block
      %h4 Tags
    .inner
      %ul.navigation= tag_cloud


